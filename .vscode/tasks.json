{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "dev",
            "type": "shell",
            "command": "pnpm dev",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$tsc"
            ],
            "isBackground": true,
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "build",
            "type": "shell",
            "command": "pnpm build",
            "group": "build",
            "problemMatcher": [
                "$tsc"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "start",
            "type": "shell",
            "command": "pnpm start",
            "group": "test",
            "problemMatcher": [],
            "isBackground": true,
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "lint",
            "type": "shell",
            "command": "pnpm lint",
            "group": "test",
            "problemMatcher": [
                "$eslint-stylish"
            ],
            "presentation": {
                "reveal": "silent",
                "panel": "shared"
            }
        },
        {
            "label": "type-check",
            "type": "shell",
            "command": "pnpm exec tsc --noEmit",
            "group": "test",
            "problemMatcher": [
                "$tsc"
            ],
            "presentation": {
                "reveal": "silent",
                "panel": "shared"
            }
        },
        {
            "label": "package",
            "type": "shell",
            "command": "./scripts/build-package.sh",
            "group": "build",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        }
    ]
}
